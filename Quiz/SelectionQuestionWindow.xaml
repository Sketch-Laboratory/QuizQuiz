<Window x:Class="Quiz.SelectableQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz"
        mc:Ignorable="d"
        Title="Quiz" Height="200" Width="400" HorizontalAlignment="Center" Loaded="Window_Loaded" VerticalAlignment="Center" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <TextBlock x:Name="Label_Question" 
                       FontSize="16" 
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Left"
                       TextAlignment="Left"
                       Text="문제" />
            <StackPanel x:Name="Layout_Answers" Margin="0, 10, 0, 0" Orientation="Vertical"/>
        </StackPanel>

    </Grid>
</Window>
