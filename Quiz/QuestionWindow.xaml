<Window x:Class="QuizQuiz.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizQuiz"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400" Activated="Window_Activated">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="Label_Question"  Content="문제" HorizontalAlignment="Center"/>
            <TextBox x:Name="TextBox_Answer" Margin="0, 10, 0, 0" Width="300" Height="30" FontSize="20" TextAlignment="Center" Text="정답" KeyDown="OnKeyDown"/>
        </StackPanel>

    </Grid>
</Window>
